@model IList<SRV.ViewModel.KeywordModel>



@{
    string keyword = "";
}

<div class="form-group" bang-keyword-show>
    <label>关键字：（* 使用空格分隔）</label><br />
    @if (Model != null)
    {
        if (Model.Count != 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {
                <span class="badge">
                    @Model[i].Name
                    <small><span class="fa fa-times"></span></small>
                </span>
                keyword = keyword + "|" + Model[i].Name;
            }
        } <!--else onthing -->
    }<!--else onthing -->

    <input type="hidden" value=@keyword name="keyword" bang-keyword />

</div>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-btn">
            <button type="button" class="btn btn-default">---一级---</button>
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" bang-keyword-load-1>
                <span class="caret"></span>
                <span class="sr-only"></span>
            </button>
            <ul class="dropdown-menu" bang-keywordList-1>

            </ul>
        </div>
        <div class="input-group-btn input-group-btn-middle">
            <button type="button" class="btn btn-default">---二级---</button>
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" bang-keywrod-load-2>
                <span class="caret"></span>
                <span class="sr-only"></span>
            </button>
            <ul class="dropdown-menu" bang-keywordList-2>

            </ul>
        </div>
        <input type="text" class="form-control" bang-keywork-userDefine  placeholder="自定义关键字,使用空格分隔">
    </div>
</div>






<script type="text/javascript" src="~/BangScript/_InputKeyword.js"></script>



